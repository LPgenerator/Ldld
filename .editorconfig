# Install EditorConfig Plugin on your IDE for one coding style
# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120


###########################################################
; make
###########################################################

[Makefile]
indent_style = tab

[makefile]
indent_style = tab


###########################################################
; markdown
###########################################################

[*.md]
trim_trailing_whitespace = false


###########################################################
; golang
###########################################################

[*.go]
indent_style = tab
max_line_length = 120


###########################################################
; JSON
###########################################################

[*.json]
indent_style = space
indent_size = 4
